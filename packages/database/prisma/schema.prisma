// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model user {
    id            String   @id @unique @default(uuid())
    username      String   @unique
    password_hash String
    totp_secret   String?
    created_at    DateTime @default(now())
    roles         String   @default("ROLE_USER")

    uploads video[]
}

model media {
    id         String     @id @unique @default(uuid())
    created_at DateTime   @default(now())
    updated_at DateTime   @updatedAt
    mime_type  String
    extension  String
    type       media_type

    width    Int?
    height   Int?
    duration Int?

    video     video[] @relation("video_media")
    thumbnail video[] @relation("video_thumbnail")
}

enum media_type {
    IMAGE
    VIDEO
}

model video {
    id          String   @id @unique @default(uuid())
    created_at  DateTime @default(now())
    updated_at  DateTime @updatedAt
    title       String   @db.VarChar(255)
    description String?  @db.MediumText
    source_url  String?  @db.VarChar(255)

    author    user   @relation(fields: [author_id], references: [id])
    author_id String

    thumbnail    media?  @relation("video_thumbnail", fields: [thumbnail_id], references: [id])
    thumbnail_id String?

    media   media  @relation("video_media", fields: [mediaId], references: [id])
    mediaId String
}
